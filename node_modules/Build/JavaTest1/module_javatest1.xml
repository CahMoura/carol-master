<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javatest1" default="compile.module.javatest1">
  <dirname property="module.javatest1.basedir" file="${ant.file.module_javatest1}"/>
  
  <property name="module.jdk.home.javatest1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javatest1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javatest1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javatest1" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="javatest1.output.dir" value="${module.javatest1.basedir}/out/production/JavaTest1"/>
  <property name="javatest1.testoutput.dir" value="${module.javatest1.basedir}/out/test/JavaTest1"/>
  
  <path id="javatest1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javatest1.module.production.classpath">
    <path refid="${module.jdk.classpath.javatest1}"/>
  </path>
  
  <path id="javatest1.runtime.production.module.classpath">
    <pathelement location="${javatest1.output.dir}"/>
  </path>
  
  <path id="javatest1.module.classpath">
    <path refid="${module.jdk.classpath.javatest1}"/>
    <pathelement location="${javatest1.output.dir}"/>
  </path>
  
  <path id="javatest1.runtime.module.classpath">
    <pathelement location="${javatest1.testoutput.dir}"/>
    <pathelement location="${javatest1.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.javatest1">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javatest1">
    <patternset refid="excluded.from.module.javatest1"/>
  </patternset>
  
  <path id="javatest1.module.sourcepath">
    <dirset dir="${module.javatest1.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javatest1" depends="compile.module.javatest1.production,compile.module.javatest1.tests" description="Compile module JavaTest1"/>
  
  <target name="compile.module.javatest1.production" depends="register.custom.compilers" description="Compile module JavaTest1; production classes">
    <mkdir dir="${javatest1.output.dir}"/>
    <javac2 destdir="${javatest1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javatest1}/javac">
      <compilerarg line="${compiler.args.javatest1}"/>
      <bootclasspath refid="javatest1.module.bootclasspath"/>
      <classpath refid="javatest1.module.production.classpath"/>
      <src refid="javatest1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javatest1"/>
    </javac2>
    
    <copy todir="${javatest1.output.dir}">
      <fileset dir="${module.javatest1.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javatest1.tests" depends="register.custom.compilers,compile.module.javatest1.production" description="compile module JavaTest1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javatest1" description="cleanup module">
    <delete dir="${javatest1.output.dir}"/>
    <delete dir="${javatest1.testoutput.dir}"/>
  </target>
</project>